#!/usr/bin/env python3

import logging
import argparse
from pathlib import Path

from dotops.cli import set_log_level
from dotops.playbook.loader import load_playbooks, exec_loaded

logger = logging.getLogger(__name__)

parser = argparse.ArgumentParser()
parser.add_argument('playbooks', nargs='+', type=Path)


if __name__ == '__main__':
    set_log_level()

    args = parser.parse_args()

    load_playbooks(args.playbooks)
    exec_loaded()
